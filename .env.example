# MongoDB Connection String (e.g., from MongoDB Atlas)
MONGO_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/invento26

# JWT Secret for Admin Authentication (Any long random string)
JWT_SECRET=your_secret_key_here

# Master Key for User Onboarding (Used to create new admin accounts)
MASTER_KEY=your_master_key_here

# Environment
NODE_ENV=production

# Server Port (Render will set this automatically, default is 5000)
PORT=5000
